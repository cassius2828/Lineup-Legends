<!DOCTYPE html>
<html lang="en">
<!-- Include head partial -->
<%- include('../partials/head.ejs') %>

<body>
  <!-- Include navigation partial -->
  <%- include('../partials/_nav.ejs') %>
  <section id="search-players">
    
    <h1>Find Your Favorite Players</h1>

    <input id="search-players-input" type="text" placeholder="search for players..." />
    <div class="content">
          <div id="player-container" class="player-container">
      <% players?.forEach(player => { %>

      <div class="player">
        <img data-value="<%= player.value %>" src="<%= player.imgUrl %>" alt="<%= player.firstName %> <%= player.lastName %>" />
        <span class="player-name">
          <%= player.firstName %> <%= player.lastName %>
        </span>
      </div>

      <% }) %>


    </div>
  
      <%- include('../partials/sort-players.ejs') %> 
    </div>

   

    <%- include('../partials/sidenav.ejs') %>
  </section>
  <script src="/js/sidenav.js"></script>
  <script src="/js/rating-color.js"></script>
  <script src="/js/search-players.js"></script>
</body>
</html>